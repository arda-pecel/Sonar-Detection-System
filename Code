#include<Servo.h>
Servo sg90;
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27, 16, 2);
const byte buton = 4;
const byte buton1 = 6;
const byte buzzer = 12;
const byte echo = 2;
const byte trig = 3;
const byte led1 = 8;
const byte led2 = 9;
const byte led3 = 10;
const byte led4 = 11;
const byte led5 = 12;
const byte pirPin = 7; 
const byte pot_pini = A0;
const byte pot_pini1 = A1;
int pot_deger = 0;
int pot_deger1;
int pot_deger_ilk = 0;
int sure = 0;
int mesafe = 0;
int alarm_mesafesi = 0;
int pos = 0;
int hareket;
void setup()
{
  lcd.begin();
  sg90.attach(5);
  sg90.write(90);
  pinMode(buton , INPUT);
  pinMode(buzzer , OUTPUT);
  pinMode(led1 , OUTPUT);
  pinMode(led2 , OUTPUT);
  pinMode(led3 , OUTPUT);
  pinMode(led4 , OUTPUT);
  pinMode(led5 , OUTPUT);
  pinMode(echo , INPUT);
  pinMode(trig , OUTPUT);
  pinMode(pirPin, INPUT);  
  Serial.begin(9600);

  pot_deger_ilk = analogRead(pot_pini);
  while (1)
  {
    for (int i = 8; i < 13; i++)
    {
      digitalWrite(i, 1);
      delay(50);
      digitalWrite(i, 0);
    }
    pot_deger = analogRead(pot_pini);
    if (pot_deger_ilk > pot_deger + 10 || pot_deger_ilk < pot_deger - 10)
      break;
  }
  while (1)
  {
    pot_deger = analogRead(pot_pini);
    pot_deger = map(pot_deger , 100 , 900, 1, 5);
    if (pot_deger == 1)
    {
      alarm_mesafesi = 10;
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 0);
      digitalWrite(led3 , 0);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);      
      lcd.setCursor(0, 1);
      lcd.print("Range= 10 cm   ");
    }
    else if (pot_deger == 2)
    {
      alarm_mesafesi = 20;
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 0);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      lcd.setCursor(0, 1);
      lcd.print("Range= 20 cm   ");
    }
    else if (pot_deger == 3)
    {
      alarm_mesafesi = 30;
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      lcd.setCursor(0, 1);
      lcd.print("Range= 30 cm   ");
    }
    else if (pot_deger == 4)
    {
      alarm_mesafesi = 40;
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 1);
      digitalWrite(led5 , 0);
      lcd.setCursor(0, 1);
      lcd.print("Range= 40 cm   ");
    }
    else if (pot_deger == 5)
    {
      alarm_mesafesi = 50;
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 1);
      digitalWrite(led5 , 1);
      lcd.setCursor(0, 1);
      lcd.print("Range= 50 cm   ");
    }

    if (digitalRead(buton) == 1)
      break;
  }
}

void loop()
{
  
  hareket = digitalRead(pirPin);
  if(hareket == HIGH){
    digitalWrite(led4 , 1);
    digitalWrite(led5 , 1);
    lcd.setCursor(0, 1);
    lcd.print("Motion Detected ");
    delay(200);
    if(digitalRead(buton)==1)
    {
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      digitalWrite(buzzer , 0);
    }     
  }
  
  if(digitalRead(buton1)==0)
    {
  
  lcd.home();
  lcd.print("Working         ");
  lcd.setCursor(0, 1);
  lcd.print("                ");    
  pot_deger1 = analogRead(pot_pini1);
  int yeni_deger = map(pot_deger1 , 0, 1023, 0, 180);
  sg90.write(yeni_deger);
    delay(15);
    }
  else if (digitalRead(buton1)==1)
    {
  for (pos = 0; pos <= 180; pos++)
  {
    sg90.write(pos);
    delay(15);
    mesafe = mesafe_olc();
    
  if (mesafe<0)
    mesafe==0;
  if (mesafe>200)
    mesafe==0;
    
    if (mesafe <= alarm_mesafesi)
    {
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 1);
      digitalWrite(led5 , 1);
      lcd.setCursor(0, 1);
      lcd.print("Coor:");
      lcd.print(pos);
      lcd.print(" to ");
      lcd.print(mesafe);
      delay(500);
      digitalWrite(buzzer , 1);
    }
    if(digitalRead(buton)==1)
    {
      digitalWrite(led1 , 0);
      digitalWrite(led2 , 0);
      digitalWrite(led3 , 0);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      digitalWrite(buzzer , 0);
    }
  }
  for (pos = 180; pos >= 0; pos--)
  {
    sg90.write(pos);
    delay(15);
    mesafe = mesafe_olc();
    if (mesafe <= alarm_mesafesi)
    {
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 1);
      digitalWrite(led5 , 1);
      lcd.setCursor(0, 1);
      lcd.print("Coor:");
      lcd.print(pos);
      lcd.print(" to ");
      lcd.print(mesafe);
      delay(500);
      digitalWrite(buzzer , 1);
    }
    if(digitalRead(buton)==1)
    {
      digitalWrite(led1 , 0);
      digitalWrite(led2 , 0);
      digitalWrite(led3 , 0);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      digitalWrite(buzzer , 0);
    }
  }
}
    
  
  pot_deger1 = analogRead(pot_pini1);
  int yeni_deger1 = map(pot_deger1 , 0, 1023, 0, 180);
  sg90.write(yeni_deger1);
    delay(15);
    mesafe = mesafe_olc();
    if (mesafe <= alarm_mesafesi)
    {
      digitalWrite(led1 , 1);
      digitalWrite(led2 , 1);
      digitalWrite(led3 , 1);
      digitalWrite(led4 , 1);
      digitalWrite(led5 , 1);
      lcd.setCursor(0, 1);
      lcd.print("Coor:");
      lcd.print(pot_deger1);
      lcd.print(" to ");
      lcd.print(mesafe);
      delay(500);
      digitalWrite(buzzer , 1);
    }
    if(digitalRead(buton)==1)
    {
      digitalWrite(led1 , 0);
      digitalWrite(led2 , 0);
      digitalWrite(led3 , 0);
      digitalWrite(led4 , 0);
      digitalWrite(led5 , 0);
      digitalWrite(buzzer , 0);
    }
  }

int mesafe_olc()
{
  digitalWrite(trig , HIGH);
  delay(1);
  digitalWrite(trig , LOW);
  sure = pulseIn(echo , HIGH);
  mesafe = (sure / 2) / 28.5;
  return mesafe;
}
